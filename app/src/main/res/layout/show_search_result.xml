<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/btn_change"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:src="@mipmap/btn_play" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rl_info_question"
            style="@style/option_item_rl">

            <TextView
                android:id="@+id/result_season"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:textColor="@color/ding_btn_select"/>

            <TextView
                android:id="@+id/result_name"
                style="@style/option_item_text"
                android:layout_width="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/result_episode"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:src="@mipmap/ic_arrow_right"
                android:textColor="@color/ding_btn_select"/>

        </LinearLayout>

        <View
            style="@style/h_line"
            android:layout_height="1px"
            android:layout_marginStart="52dp"
            android:background="@color/list_divider_color"/>

    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>